<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <web translate="label">
            <groups>
                <default translate="label">
                    <fields>
                        <eataly_etphonehome translate="label">
                            <label>CMS No Route E.T. Phone Home</label>
                            <frontend_type>select</frontend_type>
                            <source_model>eataly_etphonehome/system_config_source_redirect</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Issue a redirect to the homepage instead of a 404 Not Found.</comment>
                        </eataly_etphonehome>
                        <cms_no_route>
                            <depends><eataly_etphonehome>0</eataly_etphonehome></depends>
                        </cms_no_route>
                        <no_route>
                            <depends><eataly_etphonehome>0</eataly_etphonehome></depends>
                        </no_route>
                    </fields>
                </default>
            </groups>
        </web>
    </sections>
</config>
